<div class="page-header">
  <h1>Daily Affirmations</h1>
</div>

<section class="affirmation-section">
  <div class="affirmation-card">
    <span class="affirmation-date"><%= today %></span>
    <p><%= dailyAffirmation || "I am worthy of love and respect. My feelings are valid and I deserve to take care of myself." %></p>
    <button class="btn share-btn">
      <span>Share</span>
    </button>
  </div>
</section>

<section class="category-grid">
  <a href="#" class="category-card">
    <h3>Self-Love</h3>
    <p>Affirmations to nurture a positive relationship with yourself.</p>
  </a>
  <a href="#" class="category-card">
    <h3>Career Growth</h3>
    <p>Positive statements to boost your confidence in professional settings.</p>
  </a>
  <a href="#" class="category-card">
    <h3>Anxiety Relief</h3>
    <p>Calming affirmations to ease anxiety and promote peace.</p>
  </a>
  <a href="#" class="category-card">
    <h3>Gratitude</h3>
    <p>Reminders to appreciate the abundance in your life.</p>
  </a>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Affirmation card animation
    const affirmationCard = document.querySelector('.affirmation-card');
    if (affirmationCard) {
      setTimeout(() => {
        affirmationCard.classList.add('appear-active');
      }, 300);
    }
    
    // Share button functionality
    const shareBtn = document.querySelector('.share-btn');
    if (shareBtn) {
      shareBtn.addEventListener('click', function() {
        const affirmation = document.querySelector('.affirmation-card p').textContent;
        
        if (navigator.share) {
          navigator.share({
            title: 'My Daily Affirmation',
            text: affirmation + ' - Shared from MoodTrack',
            url: window.location.href
          })
          .catch(error => console.log('Error sharing:', error));
        } else {
          // Fallback for browsers that don't support Web Share API
          const tempInput = document.createElement('input');
          document.body.appendChild(tempInput);
          tempInput.value = affirmation + ' - Shared from MoodTrack';
          tempInput.select();
          document.execCommand('copy');
          document.body.removeChild(tempInput);
          
          alert('Affirmation copied to clipboard!');
        }
      });
    }
  });
</script>