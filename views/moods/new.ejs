<div class="page-header">
  <h1>Record Your Mood</h1>
</div>

<form action="/moods" method="POST">
  <div class="form-group">
    <label for="date">Date</label>
    <input type="date" id="date" name="date" required>
  </div>

  <div class="form-group">
    <label>How are you feeling today?</label>
    <div class="mood-selection">
      <% const moodIcons = {
        'Happy': 'ðŸ˜Š',
        'Sad': 'ðŸ˜¢',
        'Angry': 'ðŸ˜ ',
        'Anxious': 'ðŸ˜°',
        'Calm': 'ðŸ˜Œ',
        'Energetic': 'âš¡',
        'Tired': 'ðŸ˜´'
      } %>
      
      <% (moodOptions || ['Happy', 'Sad', 'Angry', 'Anxious', 'Calm', 'Energetic', 'Tired']).forEach(mood => { %>
        <div class="mood-option">
          <input type="radio" id="mood-<%= mood.toLowerCase() %>" name="mood" value="<%= mood %>" required>
          <label for="mood-<%= mood.toLowerCase() %>">
            <span style="font-size: 2rem;"><%= moodIcons[mood] || 'ðŸ™‚' %></span>
            <%= mood %>
          </label>
        </div>
      <% }) %>
    </div>
  </div>

  <div class="form-group">
    <label for="intensity">Intensity (1-10)</label>
    <div class="intensity-slider">
      <div class="slider-container">
        <input type="range" id="intensity" name="intensity" min="1" max="10" step="1" value="5">
      </div>
      <div class="intensity-value">5</div>
      <div class="intensity-labels">
        <span>Low</span>
        <span>Medium</span>
        <span>High</span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="factors">Factors (What might be influencing your mood?)</label>
    <div class="checkbox-group">
      <div class="checkbox-item">
        <input type="checkbox" id="factor-sleep" name="factors[]" value="Sleep">
        <label for="factor-sleep">Sleep</label>
      </div>
      <div class="checkbox-item">
        <input type="checkbox" id="factor-exercise" name="factors[]" value="Exercise">
        <label for="factor-exercise">Exercise</label>
      </div>
      <div class="checkbox-item">
        <input type="checkbox" id="factor-nutrition" name="factors[]" value="Nutrition">
        <label for="factor-nutrition">Nutrition</label>
      </div>
      <div class="checkbox-item">
        <input type="checkbox" id="factor-work" name="factors[]" value="Work">
        <label for="factor-work">Work</label>
      </div>
      <div class="checkbox-item">
        <input type="checkbox" id="factor-social" name="factors[]" value="Socializing">
        <label for="factor-social">Socializing</label>
      </div>
      <div class="checkbox-item">
        <input type="checkbox" id="factor-weather" name="factors[]" value="Weather">
        <label for="factor-weather">Weather</label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="notes">Notes (Optional)</label>
    <textarea id="notes" name="notes" rows="4" placeholder="Share more about how you're feeling or what's happening in your life..."></textarea>
  </div>

  <button type="submit" class="btn primary">Save Mood</button>
  <a href="/moods" class="btn">Cancel</a>
</form>