<div class="page-header">
  <h1><%= title %></h1>
</div>

<div class="card">
  <div style="text-align: center;">
    <svg width="120" height="120" viewBox="0 0 24 24" style="margin: 0 auto 20px;">
      <path fill="#e27878" d="M11,15H13V17H11V15M11,7H13V13H11V7M12,2C6.47,2 2,6.5 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20Z" />
    </svg>
    
    <h2><%= message %></h2>
    
    <% if (typeof error !== 'undefined' && error.stack && process.env.NODE_ENV === 'development') { %>
      <div style="text-align: left; margin-top: 30px; padding: 20px; background: #f5f5f5; border-radius: 8px; overflow: auto;">
        <pre><code><%= error.stack %></code></pre>
      </div>
    <% } %>
    
    <div style="margin-top: 30px;">
      <a href="/" class="btn primary">Return to Home</a>
    </div>
  </div>
</div>