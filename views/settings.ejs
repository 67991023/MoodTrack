<div class="page-header">
  <h1><i class="fas fa-cog"></i> Settings</h1>
</div>

<div class="settings-section">
  <div class="card" style="padding: 2rem; margin-bottom: 2rem;">
    <h2>Appearance</h2>
    
    <div class="settings-item">
      <div class="settings-item-header">
        <h3>Theme</h3>
        <p class="settings-description">Choose your preferred display theme</p>
      </div>
      
      <div class="theme-options">
        <div class="theme-option" data-theme="light">
          <div class="theme-preview light-preview">
            <div class="preview-header"></div>
            <div class="preview-body"></div>
          </div>
          <input type="radio" name="theme" id="theme-light" value="light">
          <label for="theme-light">Light</label>
        </div>
        
        <div class="theme-option" data-theme="dark">
          <div class="theme-preview dark-preview">
            <div class="preview-header"></div>
            <div class="preview-body"></div>
          </div>
          <input type="radio" name="theme" id="theme-dark" value="dark">
          <label for="theme-dark">Dark</label>
        </div>
        
        <div class="theme-option" data-theme="system">
          <div class="theme-preview system-preview">
            <div class="preview-header"></div>
            <div class="preview-body"></div>
            <i class="fas fa-desktop"></i>
          </div>
          <input type="radio" name="theme" id="theme-system" value="system">
          <label for="theme-system">System</label>
        </div>
      </div>
    </div>
    
    <h2>Wellness</h2>
    <div class="settings-item">
      <div class="settings-item-header">
        <h3>Affirmation Frequency</h3>
        <p class="settings-description">How often would you like to receive new affirmations?</p>
      </div>
      
      <div class="settings-controls">
        <select id="affirmation-frequency" class="settings-select">
          <option value="daily">Daily</option>
          <option value="twice-daily">Twice Daily</option>
          <option value="weekly">Weekly</option>
        </select>
      </div>
    </div>
    
    <div class="settings-item">
      <div class="settings-item-header">
        <h3>Wellness Reminders</h3>
        <p class="settings-description">Receive gentle reminders to check in with your mood</p>
      </div>
      
      <div class="settings-controls">
        <label class="toggle-switch">
          <input type="checkbox" id="wellness-reminders">
          <span class="toggle-slider"></span>
        </label>
      </div>
    </div>
  </div>
  
  <div class="card" style="padding: 2rem;">
    <h2>Account</h2>
    
    <div class="settings-item">
      <div class="settings-item-header">
        <h3>Data Export</h3>
        <p class="settings-description">Download all your mood tracking data</p>
      </div>
      
      <div class="settings-controls">
        <button class="btn primary">
          <i class="fas fa-download"></i> Export Data
        </button>
      </div>
    </div>
    
    <div class="settings-item">
      <div class="settings-item-header">
        <h3>Privacy</h3>
        <p class="settings-description">Manage how your data is used</p>
      </div>
      
      <div class="settings-controls">
        <a href="#" class="btn outline">Privacy Settings</a>
      </div>
    </div>
    
    <div style="margin-top: 2rem; text-align: center;">
      <p class="text-muted">MoodTrack Version 1.0</p>
    </div>
  </div>
</div>

<style>
  .settings-section {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .settings-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid var(--border-color);
  }
  
  .settings-item:last-child {
    border-bottom: none;
  }
  
  .settings-description {
    color: var(--text-secondary);
    margin-top: 0.25rem;
    font-size: 0.9rem;
  }
  
  .theme-options {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .theme-option {
    text-align: center;
  }
  
  .theme-preview {
    width: 100px;
    height: 60px;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 0.5rem;
    border: 1px solid var(--border-color);
    position: relative;
  }
  
  .light-preview {
    background-color: #f9f9f9;
  }
  
  .light-preview .preview-header {
    background-color: white;
    height: 20%;
    border-bottom: 2px solid #4a8072;
  }
  
  .light-preview .preview-body {
    background-color: white;
    margin: 5px;
    height: 60%;
  }
  
  .dark-preview {
    background-color: #121212;
  }
  
  .dark-preview .preview-header {
    background-color: #1e1e1e;
    height: 20%;
    border-bottom: 2px solid #5d9e8f;
  }
  
  .dark-preview .preview-body {
    background-color: #1e1e1e;
    margin: 5px;
    height: 60%;
  }
  
  .system-preview {
    background: linear-gradient(to right, #f9f9f9 50%, #121212 50%);
  }
  
  .system-preview .preview-header {
    background: linear-gradient(to right, white 50%, #1e1e1e 50%);
    height: 20%;
    border-bottom: 2px solid #4a8072;
  }
  
  .system-preview .preview-body {
    margin: 5px;
    height: 60%;
    background: linear-gradient(to right, white 50%, #1e1e1e 50%);
  }
  
  .system-preview i {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--text-primary);
    font-size: 1.2rem;
    opacity: 0.7;
  }
  
  /* Toggle switch */
  .toggle-switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 34px;
  }
  
  .toggle-switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }
  
  .toggle-slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: .4s;
    border-radius: 34px;
  }
  
  .toggle-slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: .4s;
    border-radius: 50%;
  }
  
  input:checked + .toggle-slider {
    background-color: var(--green-primary);
  }
  
  input:focus + .toggle-slider {
    box-shadow: 0 0 1px var(--green-primary);
  }
  
  input:checked + .toggle-slider:before {
    transform: translateX(26px);
  }
  
  @media (max-width: 768px) {
    .settings-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .settings-controls {
      align-self: flex-start;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get theme values
    const savedTheme = localStorage.getItem('theme');
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const systemDefault = prefersDark ? 'dark' : 'light';
    
    // Set the correct radio button
    if (!savedTheme) {
      document.getElementById('theme-system').checked = true;
    } else {
      document.getElementById('theme-' + savedTheme).checked = true;
    }
    
    // Add event listeners to theme options
    document.querySelectorAll('input[name="theme"]').forEach(input => {
      input.addEventListener('change', function() {
        if (this.value === 'system') {
          localStorage.removeItem('theme');
          document.documentElement.setAttribute('data-theme', systemDefault);
          updateThemeToggleButton(systemDefault);
        } else {
          localStorage.setItem('theme', this.value);
          document.documentElement.setAttribute('data-theme', this.value);
          updateThemeToggleButton(this.value);
        }
      });
    });
    
    // Update theme toggle button based on current theme
    function updateThemeToggleButton(theme) {
      const themeToggleText = document.getElementById('theme-toggle-text');
      const themeToggleIcon = document.querySelector('#theme-toggle i');
      
      if (!themeToggleText || !themeToggleIcon) return;
      
      if (theme === 'dark') {
        themeToggleText.textContent = 'Light Mode';
        themeToggleIcon.className = 'fas fa-sun';
      } else {
        themeToggleText.textContent = 'Dark Mode';
        themeToggleIcon.className = 'fas fa-moon';
      }
    }
  });
</script>